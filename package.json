    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.18.2",
    "@types/jest": "^28.1.1",
    "babel-jest": "^28.0.0",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.4.6",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.5.0",
    "prettier": "2.6.2"
  },
  "jest": {
